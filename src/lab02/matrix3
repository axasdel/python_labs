mat = [[1, 2, 3], [4, 5, 6]]

def check_rvanost(mat):
    dlina = len(mat[-1])
    for x in mat:
        if len(x) == dlina:
            return True
        else:
            raise ValueError
def col_sums(mat):
    if check_rvanost:
        summa = []
        summoch = [mat[x][y] + mat[x+1][y] for x in range(len(mat)) for y in range(len(mat[x]))]
        print(summoch)
col_sums(mat)