mat = [[1, 2], (3, 4, 5)]
def check_pustota(mat):
    for x in mat:
        if len(x) != 0 and (type(x) == list or type(x) == tuple):
            return True
        else:
            raise ValueError
def flatten(mat):
    if check_pustota(mat):
        new_mat = []
        for x in range(len(mat)):
            for i in range(len(mat[-1])):
                new_mat.append(mat[x][i])
        print(new_mat)
flatten(mat)